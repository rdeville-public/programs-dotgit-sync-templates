{
  "$schema": "https://raw.githubusercontent.com/jetpack-io/devbox/main/.schema/devbox.schema.json",
  "packages": {
    "pre-commit": "3.7.1",
    "yq-go": "4.44.1"
  },
  "shell": {
    "init_hook": [
      "pre-commit install -f",
      "yq '.repos[].hooks[].stages[]' .pre-commit-config.yaml | xargs -I type pre-commit install -f -t type",
      "./devbox/init_hook/pre-commit.sh"
    ]
  }
}
